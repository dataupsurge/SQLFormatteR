TARGET_DIR = ./sqlformatter/target
LIBDIR = $(TARGET_DIR)/release
STATLIB = $(LIBDIR)/libsqlformatter.a
PKG_LIBS = -L$(LIBDIR) -lsqlformatter 
PKG_CPPFLAGS = -DSTRICT_R_HEADERS -DR_NO_REMAP

# Define wrapper source object
OBJECTS = wrapper.o

# Use compilation flags to hide unwanted symbols
CARGO_RUSTFLAGS = -C link-args=-s
CRAN_FLAGS = -j 2 --verbose --features cran

all: C_clean

$(SHLIB): $(STATLIB)

CARGOTMP = $(CURDIR)/.cargo

$(STATLIB):
	if [ -f ./sqlformatter/vendor.tar.xz ]; then \
		tar xf sqlformatter/vendor.tar.xz && \
		mkdir -p $(CARGOTMP) && \
		cp sqlformatter/vendor-config.toml $(CARGOTMP)/config.toml; \
	fi

	# In some environments, ~/.cargo/bin might not be included in PATH, so we need
	# to set it here to ensure cargo can be invoked. It is appended to PATH and
	# therefore is only used if cargo is absent from the user's PATH.
	if [ "$(NOT_CRAN)" != "true" ]; then \
		export CARGO_HOME=$(CARGOTMP); \
	fi && \
		export PATH="$(PATH):$(HOME)/.cargo/bin" && \
		export CARGO_RUSTFLAGS="$(CARGO_RUSTFLAGS)" && \
			cargo build $(CRAN_FLAGS) --lib --release --manifest-path=./sqlformatter/Cargo.toml --target-dir $(TARGET_DIR) && \
			echo `cargo --version` && echo `rustc --version`;
	if [ "$(NOT_CRAN)" != "true" ]; then \
		rm -Rf $(CARGOTMP) && \
		rm -Rf $(LIBDIR)/build; \
	fi

C_clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS)

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS) sqlformatter/target
